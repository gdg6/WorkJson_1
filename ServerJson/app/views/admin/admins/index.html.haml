.row
  .list-group-item-heading
    %h2= 'Id'
    %h2= 'Логин'
    %h2= 'Права доступа'
  .list-group
    - @admin_admins.each do |admin|
      .list-group-item
        .pull-left
          %b= admin.id
        .block-100
          %i= admin.login
        .block-100
          %i= ROLES(admin.role)
        .pull-right
          =link_to edit_admin_admin_path(admin) do
            = fa_icon 'edit'
          =link_to  admin, :method => :delete, :data => { :confirm => 'Are you sure?' },  value: admin.id do
            = fa_icon 'trash'
      %br

= paginate @admin_admins

.margin-top-20
= link_to new_admin_admin_path, {:class=>'btn btn-primary btn-visited'} do
  %i{:class=>'glyphicon  glyphicon-plus'}
    %span
      New Admin