.narrow
  = form_for @event do |f|

    .form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'

    .form-group
      = f.label :picture
      = f.file_field :picture, class: 'form-control'

    .form-group
      = f.label :adress
      = f.text_field :adress, class: 'form-control'

    .form-group
      =f.label :longitude
      = f.number_field :longitude, :step => '0.00000000001', class: 'form-control'

    .form-group
      = f.label :latitude
      = f.number_field :latitude,  :step => '0.00000000001', class: 'form-control'

    .form-group
      = f.label :start_date
      .br
      = f.date_field :start_date, :min=>"2000-01-02", :class=>"form-control"
    .form-group
      = f.label :end_date
      .br
      = f.date_field :end_date, :min=>"2000-01-02", :class=>"form-control"      



    .form-group
      = f.label :description
      = f.text_area :description, class: 'form-control'

    .form-group
      = f.label :price
      = f.number_field :price, class: 'form-control'

    .form-group
      = f.label :popularity
      = f.number_field :popularity, class: 'form-control'

    .form-group
      = f.label :city
      = f.select :city_id, options_for_select(cities_list), {}, {class: 'form-control'}
    .form
      = label_tag 'Персонажи'
      .br
      .div{:style=>"margin-left:10px;"}
        - getAllCharacters().each  do |x|
          = check_box_tag x.title, x.id
          %i= x.title 
          .br


    .form-group
      = label_tag 'Character'
      = select_tag :character_id, options_for_select(session_character_list), class: 'form-control'
    .margin-top-20
    .actions
      = f.submit 'Сохранить', class: 'btn btn-primary btn-md'

