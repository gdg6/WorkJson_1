.row
  .list-group-item-heading
    %h2= 'Id'
    %h2= 'Логин'
    %h2= 'Персонаж'
    %h2= 'Город'
    %h2= 'Email'
    %h2= 'Соц сеть'

  .list-group
    - @users.each do |user|
      .list-group-item
        %b= user.id
        .block-100
          %i= user.login
        .block-100
          %i= user.character.title
        .block-100
          %i= user.city.name
        .block-100
          %i= user.email
        .block-100
          %i= user.provider
        .pull-right
          =link_to "/admin/users/#{user.id}" do
            =fa_icon 'eye'
          =link_to "/admin/users/#{user.id}/edit" do
            = fa_icon 'edit'
          =link_to  "admin/users/#{user.id}", :method => :delete, :data => { :confirm => 'Are you sure?' } do
            = fa_icon 'trash'
      %br


= paginate @users

