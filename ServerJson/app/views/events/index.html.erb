<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Eventid</th>
      <th>Name</th>
      <th>Adress</th>
      <th>Date</th>
      <th>Time</th>
      <th>Description</th>
      <th>Price</th>
      <th>Popularity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.EventId %></td>
        <td><%= event.Name %></td>
        <td><%= event.Adress %></td>
        <td><%= event.Date %></td>
        <td><%= event.Time %></td>
        <td><%= event.Description %></td>
        <td><%= event.Price %></td>
        <td><%= event.Popularity %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

