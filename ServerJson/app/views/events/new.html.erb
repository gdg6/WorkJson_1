<h1>Создание события</h1>

<%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :picture %><br>
      <%= f.file_field :picture %>
    </div>
    <div class="field">
      <%= f.label :adress %><br>
      <%= f.text_field :adress %>
    </div>
    <div class="field">
      <%= f.label :longitude %><br>
      <%= f.number_field :longitude, :step => '0.00000000001' %>
    </div>
    <div class="field">
      <%= f.label :latitude %><br>
      <%= f.number_field :latitude,  :step => '0.00000000001' %>
    </div>


    <div class="field">
      <%= f.label :date %><br>
      <%= f.number_field :date %>
    </div>
    <div class="field">
      <%= f.label :time %><br>
      <%= f.text_field :time %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.label :price %><br>
      <%= f.number_field :price %>
    </div>
    <div class="field">
      <%= f.label :popularity %><br>
      <%= f.number_field :popularity %>
    </div>
    <div class="field">
      <%= f.label :city %><br>
      <%= f.select :city_id, options_for_select(cities_list) %>
    </div>
    <div class="field">
      <%= label_tag 'Character2' %><br>
      <%= select_tag :character_id, options_for_select(session_character_list) %>
    </div>


    <div class="actions">
      <%= f.submit, 'Сохранить', { :class=>"btn btn-primary"} %>
    </div>
<% end %>


<%= link_to 'Назад', events_path %>
