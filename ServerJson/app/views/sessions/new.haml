.narrow
  .form-login
    .page-header
      %h1 Авторизация
    =form_tag login_path do
      .form-group
        =label_tag :login, "Логин/Почта"
        =text_field :login, @user.try(:login), class: 'form-control'
      .form-group
        =label_tag :password, User.human_attribute_name(:password)
        =password_field_tag :password, nil, class: 'form-control'
      .form-actions
        =submit_tag 'Войти', class: 'btn btn-primary btn-md'
        = link_to "Войти через Facebook", user_omniauth_authorize_path(:facebook)
        = link_to "Войти через Vkontakte", user_omniauth_authorize_path(:vkontakte)
        = link_to "Регистрация", registration_path
