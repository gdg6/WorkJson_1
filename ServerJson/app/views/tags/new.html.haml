%h1 New tag

= form_for @tag do |f|
  - if @tag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tag.errors.count, "error")} prohibited this tag from being saved:"
      %ul
        - @tag.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :context
    = f.text_field :context

  .field
    = label_tag :character_id
    = number_field_tag :chraracter_id
  .actions
    = link_to 'Save', '#', :class => "sys-add-tag"


= link_to 'Back', tags_path
